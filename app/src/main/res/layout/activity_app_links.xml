<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.portfolio.tony.myappportfolio.AppLinks"
    android:background="@color/background_floating_material_light"
    android:backgroundTint="@color/material_blue_grey_800">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Build It Bigger"
        android:id="@+id/project3"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        android:background="@color/button_material_dark"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="@android:color/primary_text_dark"
        android:layout_centerInParent="true" />

    <Button
        android:layout_width="200dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Make Your App Material"
        android:id="@+id/project4"
        android:layout_below="@id/project3"
        android:layout_marginBottom="15dp"
        android:background="@color/button_material_dark"
        android:textStyle="bold"
        android:layout_alignStart="@id/project3"
        android:textColor="@android:color/primary_text_dark"
        android:textAlignment="center" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Stock Hawk"
        android:textAlignment="center"
        android:id="@+id/project2"
        android:textStyle="bold"
        android:layout_alignStart="@+id/project3"
        android:background="@color/button_material_dark"
        android:layout_above="@id/project3"
        android:layout_marginBottom="15dp"
        android:textColor="@android:color/primary_text_dark" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Popular Movies"
        android:textAlignment="center"
        android:id="@+id/project1"
        android:layout_alignStart="@+id/project3"
        android:layout_marginBottom="15dp"
        android:layout_above="@id/project2"
        android:textStyle="bold"
        android:background="@color/button_material_dark"
        android:textColor="@android:color/primary_text_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nanodegree Applications"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:id="@+id/AppText"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/project1"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginBottom="25dp"
        android:typeface="normal"
        android:textStyle="bold"
        android:textSize="25dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Go Ubiquitous"
        android:id="@+id/project5"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@id/project4"
        android:background="@color/button_material_dark"
        android:layout_marginBottom="15dp"
        android:textColor="@android:color/primary_text_dark"
        android:layout_alignStart="@id/project4" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Capstone"
        android:textAlignment="center"
        android:id="@+id/project6"
        android:background="@color/button_material_dark"
        android:textStyle="bold"
        android:layout_below="@id/project5"
        android:textColor="@android:color/primary_text_dark"
        android:layout_alignStart="@id/project5" />

</RelativeLayout>
